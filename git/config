[core]
    editor = nvim
    whitespace = cr-at-eol
    filemode = false
    trustctime = false
    autocrlf = input

[color]
    ui = auto

[grep]
    lineNumber = true

[diff]
    renames = copies
    tool = nvim

[difftool]
    prompt = true

[difftool "sourcetree"]
    cmd = opendiff \"$LOCAL\" \"$REMOTE\"
    path =

[merge]
    tool = nvim
    conflictstyle = zdiff3
    defaultToUpstream = true

[mergetool]
    prompt = false
    path = nvim

[mergetool "nvim"]
    cmd = nvim -d -c "wincmd l" -c "norm ]c" "$LOCAL" "$MERGED" "$REMOTE"

[filter "media"]
    required = true
    clean = git media clean %f
    smudge = git media smudge %f

[credential]
    helper = osxkeychain
	helper = /usr/local/share/gcm-core/git-credential-manager

[help]
    autocorrect = 1

