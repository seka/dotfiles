# tig configuration

# General settings
set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %H:%M"
set main-view-author = full
set main-view-id = yes
set wrap-lines = yes
set tab-size = 4

# Show working tree changes with a descriptive title
set show-changes = yes

# Main view with short commit ID (7 chars to distinguish from 0000000)
set main-view-id-width = 7
set main-view = id:7 date author commit-title:refs=yes

# Horizontal scrolling for long commit messages
bind generic h scroll-left
bind generic l scroll-right

# Diff settings
set diff-context = 3
set ignore-space = some

# Search settings
set ignore-case = smart-case
