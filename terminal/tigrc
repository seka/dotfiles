# tig configuration

# General settings
set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %H:%M"
set main-view-author = full
set main-view-id = yes
set tab-size = 4

# Show working tree changes with a descriptive title
set show-changes = yes

# Main view with short commit ID (refs=yes enables branch/tag display)
set main-view = id:true date author commit-title:refs=yes

# Horizontal scrolling for long commit messages
bind generic h scroll-left
bind generic l scroll-right

# Horizontal scroll settings to help with wide content
set horizontal-scroll = 25%

# Diff settings
set diff-context = 3
set ignore-space = no

# Search settings
set ignore-case = smart-case
