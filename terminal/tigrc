# tig configuration

# General settings
set main-view-date = custom
set main-view-date-format = "%Y-%m-%d %H:%M"
set main-view-author = full
set main-view-id = yes
set wrap-lines = yes
set tab-size = 4

# Show working tree changes with a descriptive title
set show-changes = yes

# Main view with short commit ID (7 chars to distinguish from 0000000)
set main-view-id-width = 7
set main-view = id:7 date author commit-title:refs=yes

# Horizontal scrolling for long commit messages
bind generic h scroll-left
bind generic l scroll-right

# Color settings (correct tig syntax)
color default default default
color cursor white blue bold
color status green default
color delimiter cyan default
color date yellow default
color mode cyan default
color id magenta default
color overflow red default
color header yellow default
color section cyan default
color directory yellow default
color file default default
color grep.file blue default
color file-size default default
color line-number cyan default
color title-blur white blue
color title-focus white blue bold

# Diff colors
color diff-header yellow default
color diff-index blue default
color diff-chunk magenta default
color diff-add green default
color diff-del red default

# Status view colors
color stat-head cyan default
color stat-section yellow default
color stat-staged green default
color stat-unstaged red default
color stat-untracked cyan default

# Diff settings
set diff-context = 3
set ignore-space = some

# Search settings
set ignore-case = smart-case
