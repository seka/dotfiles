PERL_LOCAL_LIB_ROOT="/Users/shin.sekaryo/perl5${PERL_LOCAL_LIB_ROOT:+:${PERL_LOCAL_LIB_ROOT}}"; export PERL_LOCAL_LIB_ROOT;
PERL_MB_OPT="--install_base \"/Users/shin.sekaryo/perl5\""; export PERL_MB_OPT;
PERL_MM_OPT="INSTALL_BASE=/Users/shin.sekaryo/perl5"; export PERL_MM_OPT;